<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="LAB5_MAUI.MainPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <toolkit:SelectedItemEventArgsConverter x:Key="SelectedItemEventArgsConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout
    Padding="30,0"
    Spacing="25">
            <Label
        Text="{Binding Title}"
        Style="{StaticResource Headline}"
        SemanticProperties.HeadingLevel="Level1" />

            <Button
        x:Name="CounterBtn"
        Text="Refresh data" 
        SemanticProperties.Hint="Counts the number of times you click"
        Command="{Binding LoadCommand}"
        HorizontalOptions="Fill" />

            <ListView x:Name="Lv1"
              ItemsSource="{Binding Houses}"
              SelectedItem="{Binding SelectedHouse}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" Spacing="10" Margin="10">
                                <Label Text="{Binding Owner}" />
                                <Label Text="{Binding Owner}" />
                                <Label Text="{Binding Area}" />
                                <Label Text="{Binding Floors}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.Behaviors>
                    <toolkit:EventToCommandBehavior
                EventName="ItemSelected"
                Command="{Binding SelectsHouseCommand}"
                EventArgsConverter="{StaticResource SelectedItemEventArgsConverter}" />
                </ListView.Behaviors>
            </ListView>
        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
